{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "es2015",
    "noEmit": true,
    "noEmitHelpers": false,
    "target": "es6",
    "outDir": "./tmp",
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "compileOnSave": false,
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "node_modules"
  ]
}
