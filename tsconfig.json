{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "noEmitHelpers": false,
    "target": "ES6",
    "outDir": "./dist",
    "strictNullChecks": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/components/GameController.ts",
    "src/components/PlatformerPhysics.ts",
    "src/components/PlayerController.ts",
    "src/Game.ts",
    "src/shim/Component.ts",
    "src/shim/GameObject.ts",
    "src/shim/index.ts",
    "src/shim/Physical.ts"
  ]
}
